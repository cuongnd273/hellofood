<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nguyen.cuong.hellofoods">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity
            android:name=".activities.AddCartActivity"
            android:theme="@style/AddCart" />
        <activity
            android:name=".activities.ChoiceRestaurantActivity"
            android:theme="@style/Restaurant" />
        <activity android:name=".activities.InfoBillActivity" />
        <activity android:name=".activities.AccountActivity" />
        <activity android:name=".activities.SettingActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddAddressActivity"
            android:theme="@style/AddCart"/>
    </application>

</manifest>